extends ../layout

block content
  h1 Add Member
  form(action="/members" method="POST")
    label Name
    input(type="text" name="name" required)

    label Email
    input(type="email" name="email" required)

    label Sub-circle
    select(name="subcircle" required)
      option(value="") -- Select --
      each sc in subcircles
        option(value=sc)= sc

    label Level
    select(name="level" required)
      option(value="") -- Select --
      each lv in levels
        option(value=lv)= lv

    button(type="submit") Add Member
    a.btn-cancel(href="/members") Cancel
